<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="lab4.MainWindow"
        Title="lab4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Click="load"
                Margin="10"
                Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Center" 
                Content="LOAD"/>
        <Button Grid.Row="1" Click="green"
                Margin="10"
                Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                Content="ONLY GREEN"/>
        <Button Grid.Row="2" Click="rotate180"
                Margin="10"
                Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                Content="UPSIDE DOWN"/>
        <Button Grid.Row="3" Click="invert"
                Margin="10"
                Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                Content="INVERT COLOURS"/>
        <Button Grid.Row="4" Click="rotate"
                Margin="10"
                Width="150" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                Content="ROTATE"/>
    </Grid>
</Window>
